<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundoEjercicioActivity">

    <ImageView
        android:id="@+id/ivPrimera"
        android:layout_width="120dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivSegunda"
        android:src="@drawable/back_card">
    </ImageView>

    <ImageView
        android:id="@+id/ivSegunda"
        android:layout_width="120dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toBottomOf="@id/ivPrimera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivTercera"
        android:src="@drawable/back_card">
    </ImageView>

    <ImageView
        android:id="@+id/ivTercera"
        android:layout_width="120dp"
        android:layout_height="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSegunda"
        android:src="@drawable/back_card">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>